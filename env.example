# Application Settings
APP_NAME=AI Coaching Assistant
VERSION=1.0.0
DEBUG=false

# Security
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database Configuration
DATABASE_URL=postgresql://coaching_user:coaching_password@localhost:5432/coaching_db
REDIS_URL=redis://localhost:6379

# Neo4j Graph Database
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=coaching_password

# Vector Database (Weaviate)
WEAVIATE_URL=http://localhost:8080

# Message Queue (RabbitMQ)
RABBITMQ_URL=amqp://coaching_user:coaching_password@localhost:5672/

# AI Services API Keys
OPENAI_API_KEY=your_openai_api_key_here
PINECONE_API_KEY=your_pinecone_api_key_here

# File Storage
UPLOAD_DIR=uploads
MAX_FILE_SIZE=104857600
ALLOWED_VIDEO_FORMATS=mp4,avi,mov,mkv

# CORS Settings
ALLOWED_HOSTS=["*"]

# AI Service URLs
COMPUTER_VISION_URL=http://localhost:8001
TACTICAL_ANALYSIS_URL=http://localhost:8002
VIDEO_INTELLIGENCE_URL=http://localhost:8003

# WebSocket
WS_URL=ws://localhost:8004

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Frontend Environment Variables
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8004
NEXT_PUBLIC_APP_NAME=AI Coaching Assistant

# AWS S3 (for production file storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET=your_s3_bucket_name

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password

# Third-party API Keys
WYSCOUT_API_KEY=your_wyscout_api_key
TRANSFERMARKT_API_KEY=your_transfermarkt_api_key 